{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:utils",
                "onlyDependOnLibsWithTags": [
                  "scope:utils"
                ]
              },
              {
                "sourceTag": "scope:ui",
                "onlyDependOnLibsWithTags": [
                  "scope:utils",
                  "scope:ui"
                ]
              },
              {
                "sourceTag": "scope:app",
                "onlyDependOnLibsWithTags": [
                  "scope:utils",
                  "scope:ui",
                  "scope:app"
                ]
              },
              {
                "sourceTag": "domain:inventory",
                "onlyDependOnLibsWithTags": [
                  "domain:inventory",
                  "domain:shared"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}